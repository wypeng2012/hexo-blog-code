{% block sidebar %}
<aside class="sidebar" id="sidebar" style="background: url({{ url_for("images/sidebar_background.png") }});">
  {% if theme.search %}
  <div class="search">
    <div class="form-group">
      <i class="fas fa-search"></i><input type="search" id="search-input" name="q" results="0" placeholder="{{ __("search") }}" class="form-control"/>
    </div>
  </div>
  <div class="search-result-box" id="search-result"></div>
  {% endif %}
  {% include "info.njk" %}
  <div class="sidebar-sticky">
    {% if page.content %}
    {% include "toc.njk" %}
    {% endif %}
    {% if theme.social.enable %}
    {% include "sociallink.njk" %}
    {% endif %}
    {% if theme.blogroll.enable %}
    {% include "blogroll.njk" %}
    {% endif %}
  </div>
</aside>
{% endblock %}
